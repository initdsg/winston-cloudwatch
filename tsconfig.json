{
  "compilerOptions": {
      "target": "ES2020",
      "outDir": "dist",
      "module": "node16",
      "moduleResolution": "node16",
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "declaration": true,
      "declarationMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
  },
  "include": [ "src", "__tests__" ],
  "exclude": [
      "node_modules"
  ]
}
